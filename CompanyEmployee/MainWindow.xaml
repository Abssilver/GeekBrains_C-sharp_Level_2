<Window x:Class="CompanyEmployee.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:CompanyEmployee"
        
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="500" 
        Width="800"
        MinHeight="400" 
        MinWidth="600" 
        MaxHeight="600" 
        MaxWidth="1000">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <ListView x:Name="lwEmployee" 
                  Background="BurlyWood"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Margin="10" 
                  Grid.Row="1"
                  Grid.Column="1"
                  Grid.ColumnSpan="3"
                  ItemsSource="{Binding Path=EmployeeData,
                  RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="#"  Width="25" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Name" Width="100" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Surname" Width="100" DisplayMemberBinding="{Binding Surname}"/>
                    <GridViewColumn Header="Age" Width="50" DisplayMemberBinding="{Binding Age}"/>
                    <GridViewColumn Header="Salary" Width="100" DisplayMemberBinding="{Binding Salary}"/>
                    <GridViewColumn Header="Department" Width="200" DisplayMemberBinding="{Binding Dep}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Column="4"
                    Grid.Row="1">
            <Button 
                x:Name="btnAdd" 
                Margin="10" 
                Content="Добавить"
                Click="Button_Click"/>
            <Button 
                x:Name="btnEdit" 
                Margin="10" 
                Content="Редактировать"/>
        </StackPanel>


    </Grid>

</Window>

